<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/caution"
        android:layout_gravity="center"
        android:layout_margin="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:layout_margin="12dp"
        android:text="WARNING: THIS ACTION CANNOT BE UNDONE.ENTER ROOT CREDENTIALS AND PRESS SUBMIT TO CONTINUE"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:fontFamily="@string/shared_preference_username"
        android:inputType="textWebEditText"
        android:textStyle="bold"
        android:id="@+id/root_username"
        android:layout_margin="12dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:fontFamily="@string/shared_preference_username"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:id="@+id/root_password"
        android:layout_margin="12dp"/>

</LinearLayout>